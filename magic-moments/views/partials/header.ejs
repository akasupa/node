<!-- views/partials/header.ejs -->

<style>
    .left-div {

        float: left;
        margin-right: 8px;
        margin-top: 20px;
        margin-bottom: 8px;
        width: 100px;

    }

    .left-div-group {
        float: left;
    }

    .right-div-group {
        vertical-align: top;
    }

    .right-div {
        padding-top: 25px;
        float: left width : 50 %;
        vertical-align: top;
        width: 500px;
    }

    .logged-in-div {
        margin-top: 10px;
        margin-left: 15px;
        float: right;
        vertical-align: top;
        color: #ffffff;
    }

    ul.rig {
        list-style: none;
        font-size: 0px;
        margin-left: -2.5%; /* should match li left margin */
    }

    ul.rig li {
        display: inline-block;
        padding: 10px;
        margin: 0 0 2.5% 2.5%;
        background: #fff;
        border: 1px solid #ddd;
        font-size: 16px;
        font-size: 1rem;
        vertical-align: top;
        box-shadow: 0 0 5px #ddd;
        box-sizing: border-box;
        -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }

    ul.rig li img {
        max-width: 100%;
        height: auto;
        margin: 0 0 10px;
    }

    ul.rig li h3 {
        margin: 0 0 5px;
    }

    ul.rig li p {
        font-size: .9em;
        line-height: 1.5em;
        color: #999;
    }

    /* class for 2 columns */
    ul.rig.columns-2 li {
        width: 47.5%; /* this value + 2.5 should = 50% */
    }

    /* class for 3 columns */
    ul.rig.columns-3 li {
        width: 30.83%; /* this value + 2.5 should = 33% */
    }

    /* class for 4 columns */
    ul.rig.columns-4 li {
        width: 22.5%; /* this value + 2.5 should = 25% */
    }

    /* class for 4 columns */
    ul.rig.columns-5 li {
        width: 17.5%; /* this value + 2.5 should = 25% */
    }

    @media (max-width: 480px) {
        ul.grid-nav li {
            display: block;
            margin: 0 0 5px;
        }

        ul.grid-nav li a {
            display: block;
        }

        ul.rig {
            margin-left: 0;
        }

        ul.rig li {
            width: 100% !important; /* over-ride all li styles */
            margin: 0 0 20px;
        }
    }

    #addImageDiv {
        opacity: 0.92;
        position: fixed;
        left: 50%;
        top: 50%;

        z-index: 100;

        height: 400px;
        margin-top: -200px;

        width: 600px;
        display: none;
        margin-left: -300px;
    }

    .header-font {
        font-family: fantasy;
        font-size: 32px;
        font-style: normal;
        font-weight: bold;
        text-decoration: none;
        text-transform: none;
        color: lightgoldenrodyellow;
        width: 60%
    }

    .header-sub-font {
        font-family: cursive;
        font-size: 12px;
        font-style: normal;
        font-weight: bold;
        text-decoration: none;
        text-transform: none;
        color: navajowhite;
        width: 60%

    }

    /* #addImageDiv {
         opacity: 0.92;
         position: absolute;
         top: 0px;
         left: 0px;
         height: 100px;
         width: 500px;
         background: #000;

     }*/
</style>
<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <div style="vertical-align: top">
            <table width="100%">
                <tr>
                    <td>
                        <div class="left-div">
                            <a href="#">
                                <img width="80" height="80" src="images/logo.png"/>
                            </a></div>
                    </td>
                    <td valign="top">
                        <div class="right-div">
                            <span class="header-font">Magic Moments</span>
                            <span class="header-sub-font"><br>This is where life sharing begins...</span>
                        </div>
                    </td>
                    <td align="right" valign="top"><%if (user){%>
                        <div class="logged-in-div">
                            <span>Welcome, <%=user.fullname%> | </span><a href="/manage-groups"><span style="color: white">Manage Groups</span></a><span> | <a href="/home"><span style="color:white">Home</span></a><span> | </span><a href="/logout"><span style="color:white">Logout</span></a>
                        </div>
                        <%}%>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</nav>